@page
@model CogServicesVisionSamples_202107.Pages.FormRecognitionModel
@{
    ViewData["Title"] = "Form Recognizer - Id Recognition";
}

<h1>Form Recognizer - Id Recognition</h1>
@*Select image file from local folder and click "Analyze"*@
ファイルを選択して "Analyze" をクリック
<form method="post" enctype="multipart/form-data">
    <div><input asp-for="ImageFile" type="file" /></div>
    <div><input type="submit" value="Analyze" /></div>
</form>

<div>
    @Model.Result
</div>
<div>
    @if (Model.RecognizedForm != null)
    {
        <table border="0">
            @foreach (var key in Model.RecognizedForm.Fields.Keys)
            {
                <tr>
                    <td>@key</td>
                    <td>: </td>
                    <td>@Model.RecognizedForm.Fields.GetValueOrDefault(key).ValueData.Text</td>
                </tr>
            }
        </table>
    }

    <img src="@Model.ImageFileUrl" />

</div>
